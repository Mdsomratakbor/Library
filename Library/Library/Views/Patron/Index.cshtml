@model Library.Web.ViewModels.PatronViewModels.PatronIndexViewModel
@{ 
    ViewBag.Title = "Patron Index";
}
<h3>@ViewBag.Title</h3>
<div id="patronIndex">
    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp customTable" id="patronIndexTable">
        <thead>
            <tr>
                <th>Profile Link</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Library Card Id</th>
                <th>Overdue Fees</th>
                <th>Home Library</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model.patronDetails)
            {
                <tr>
                    <td>
                        <a asp-controller="Patron" asp-action="Detail" asp-route-id="@data.Id">(Profile)</a>
                    </td>
                    <td>@data.FirstName</td>
                    <td>@data.LastName</td>
                    <td>@data.LibraryCardId</td>
                    <td>@data.OverdueFees</td>
                    <td>@data.HomeLibraryBranch</td>

                </tr>
            }

        </tbody>
    </table>
</div>