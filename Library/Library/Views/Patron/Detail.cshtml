@model Library.Web.ViewModels.PatronViewModels.PatronDetailViewModel

@{ViewBag.Title = "Patron Information";}
<div class="container">
    <div class="card-header clearfix detailHeading">
        <h2 class="text-muted">@ViewBag.Title</h2>
    </div>
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-4">
                <div>
                    <h2>@Model.FullName</h2>
                    <div class="patronContact">
                        <div id="patronTel">Library Card Id: @Model.LibraryCardId</div>
                        <div id="patronAddress">Address: @Model.Address</div>
                        <div id="patronTel">Telephone: @Model.Telephone</div>
                        <div id="patronDate">Member Since: @Model.MemberSince</div>
                        <div id="patronLibrary">Home Library: @Model.HomeLibraryBranch</div>

                        @if (Model.OverdueFees > 0)
                        {
                            <div id="patronHasFees">Current Fees Due: $@Model.OverdueFees</div>
                        }
                        else
                        {
                            <div id="patronNoFees">No Fees Currently Due.</div>
                        }
                   
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <h4>Assets Currently Checked Out</h4>
                @if (Model.AssetsCheckOut.Any())
                {
                    <div id="patronAssets">
                        <ul>
                            @foreach (var data in Model.AssetsCheckOut)
                            {
                                <li>
                                    @data.LibraryAsset.Title - (Library Asset ID: @data.LibraryAsset.Id)
                                    <ul>
                                        <li>
                                            Since: @data.Since
                                        </li>
                                        <li>
                                            Due: @data.Until
                                        </li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>
                }
                else
                {
                    <div>
                        No items currently checked out.
                    </div>
                }
            </div>
            <div class="col-md-4">
                <h4>Assets Currently On Hold</h4>
                @if (Model.Holds.Any())
                {
                    <div id="patronHolds">
                        <ul>
                            @foreach (var data in Model.Holds)
                            {
                                <li>@data.LibraryAsset.Title - Placed @data.HoldPlaced.ToString("yy-dd-MM - HH:mm")</li>
                            }
                        </ul>
                    </div>
                }
                else
                {
                    <div>No items on hold.</div>
                }
            </div>
        </div>
    </div>
</div>